body {
    font-family: Arial, sans-serif;
}

#date-time {
    font-size: 18px;
}

#user-name {
    font-size: 18px;
}

#stock-table th {
    background-color: #f0f0f0;
    padding: 10px;
    text-align: left;
    font-weight: bold;
    border-right: 1px solid #000;
}

#stock-table td {
    padding: 10px;
    border-right: 1px solid #000;
    border-bottom: 1px solid #000;
}

#stock-table tr:nth-child(even) {
    background-color: #f9f9f9;
}